{
  "name": "claude-code-companion",
  "version": "0.1.0",
  "description": "Remote monitoring and control system for Claude Code sessions",
  "private": true,
  "workspaces": [
    "agent",
    "server", 
    "client"
  ],
  "scripts": {
    "build": "pnpm run build --filter=*",
    "dev": "pnpm run dev --filter=*",
    "test": "pnpm run test --filter=*",
    "lint": "pnpm run lint --filter=*",
    "clean": "pnpm run clean --filter=*",
    "install:agent": "cd agent && npm link",
    "dev:server": "pnpm run dev --filter=server",
    "dev:client": "pnpm run dev --filter=client"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "tsconfig-paths": "^4.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "keywords": [
    "claude-code",
    "ai-monitoring", 
    "remote-control",
    "hooks",
    "development-tools"
  ],
  "author": "Claude Code Companion",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/claude-code-companion.git"
  }
}